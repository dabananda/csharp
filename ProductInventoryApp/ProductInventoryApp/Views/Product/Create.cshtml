@model ProductInventoryApp.Models.PostProductModel

@{
	ViewData["Title"] = "Add Product";
}

<div class="bg-body-tertiary">
	<div class="container">
		<div class="card w-50 mx-auto bg-light">
			<div class="card-body">
				<form method="post">
					<h2 class="card-title text-center">Add New Product</h2>
					<div class="mb-3">
						<div class="row">
							<div class="col">
								<label class="form-label">Product name</label>
								<input type="text" class="form-control" id="name" asp-for="Name">
							</div>
							<div class="col">
								<label class="form-label">Category</label>
								<select class="form-select" id="category" asp-for="Category">
									<option value="Food">Food</option>
									<option value="Oil">Oil</option>
									<option value="Fruits">Fruits</option>
									<option value="Meat">Meat</option>
									<option value="Fish">Fish</option>
									<option value="Other">Other</option>
								</select>
							</div>
						</div>
					</div>
					<div class="mb-3">
						<label class="form-label">Price</label>
						<input type="text" class="form-control" id="price" asp-for="Price">
					</div>
					<div class="mb-3">
						<label class="form-label">Quantity</label>
						<div class="input-group">
							<input type="number" class="form-control" id="quantity" asp-for="Quantity">
							<select class="form-select" id="quantityUnit" name="QuantityUnit">
								<option value="kg">kg</option>
								<option value="liter">liter</option>
								<option value="peice">piece</option>
							</select>
						</div>
					</div>
					<div class="d-grid col-6 mx-auto mb-3 mt-4">
						<button class="btn btn-dark" type="submit">Save Product</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
