@{
	ViewData["Title"] = "Expenses";
}

<div class="container">
	<h2 class="mb-3">Expenses</h2>
	<br />
	<hr />
	<h3 class="text-center">Total expenses: $@ViewBag.Expenses</h3>
	<hr />
	<br />
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Value</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (var expense in Model)
				{
					<tr>
						<th>@expense.Id</th>
						<td>@expense.Value</td>
						<td>@expense.Description</td>
						<td>
							<a class="btn btn-primary me-2" asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
							<a class="btn btn-danger" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>